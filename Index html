  <script>
    // 🟢 group ID ديالك
    const groupId = "HPjnQydvZCNFEjYVWAt1K0";
    const inviteUrl = `https://chat.whatsapp.com/HPjnQydvZCNFEjYVWAt1K0`;

    const joinBtn = document.getElementById("joinBtn");
    joinBtn.href = inviteUrl;

    // 🟩 توليد QR code
    const qrSrc = "https://api.qrserver.com/v1/create-qr-code/?size=250x250&data=" + encodeURIComponent(inviteUrl);
    document.getElementById("qrImage").src = qrSrc;

    // 📱 فتح التطبيق مباشرة فالموبايل
    function openWhatsAppApp() {
      const isMobile = /iphone|ipod|ipad|android|blackberry|windows phone|opera mini/i.test(navigator.userAgent);
      if (!isMobile) return;
      const appLink = `whatsapp://chat?code=${groupId}`;
      window.location = appLink;
      setTimeout(() => { window.location = inviteUrl; }, 1200);
    }

    joinBtn.addEventListener("click", function(e){
      if (/iphone|ipod|ipad|android|blackberry|windows phone|opera mini/i.test(navigator.userAgent)) {
        e.preventDefault();
        openWhatsAppApp();
      }
    });
  </script>
